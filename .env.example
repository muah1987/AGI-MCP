# AGI-MCP Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Docker Hub Configuration
# ============================================
# Your Docker Hub username
DOCKER_USERNAME=your-dockerhub-username

# Your Docker Hub access token (create at https://hub.docker.com/settings/security)
DOCKER_TOKEN=your-dockerhub-token

# Docker image name (without username prefix)
DOCKER_IMAGE_NAME=agi-mcp

# Docker image tag (default: latest)
DOCKER_IMAGE_TAG=latest

# Full Docker image reference (auto-constructed)
# Format: ${DOCKER_USERNAME}/${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}

# ============================================
# AGI-MCP Server Configuration
# ============================================
# Node environment (development, production, test)
NODE_ENV=production

# Data directory for SQLite database
AGI_MCP_DATA_DIR=/app/data

# Memory directory for logs and documentation
AGI_MCP_MEMORY_DIR=/app/memory

# Session ID (auto-generated if not set)
# AGI_MCP_SESSION_ID=

# Enable debug logging (true/false)
AGI_MCP_DEBUG=false

# ============================================
# Database Configuration
# ============================================
# SQLite database file path
DB_PATH=/app/data/agi-mcp.db

# Database connection timeout (milliseconds)
DB_TIMEOUT=5000

# Enable WAL mode for better concurrency (true/false)
DB_WAL_MODE=true

# ============================================
# Security Configuration
# ============================================
# Enable hook system (true/false)
ENABLE_HOOKS=true

# Enable subagent system (true/false)
ENABLE_SUBAGENTS=true

# Maximum subagent execution time (seconds)
MAX_SUBAGENT_TIMEOUT=300

# Enable thinking mechanism validation (true/false)
ENABLE_THINKING=true

# ============================================
# Performance Configuration
# ============================================
# Maximum concurrent subagents
MAX_CONCURRENT_SUBAGENTS=5

# Database query cache size (MB)
DB_CACHE_SIZE=100

# Log retention period (days)
LOG_RETENTION_DAYS=30

# ============================================
# Monitoring Configuration
# ============================================
# Enable performance metrics (true/false)
ENABLE_METRICS=false

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30
